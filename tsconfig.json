{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
